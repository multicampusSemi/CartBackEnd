package com.project.mapper;

import java.util.List;

import org.apache.ibatis.annotations.Insert;
import org.apache.ibatis.annotations.Mapper;
import org.apache.ibatis.annotations.Param;

import com.project.model.Cart;

@Mapper
public interface LjmSemiMapper {
	 @Insert("INSERT INTO bookinglist (user_id, product_id, product_count, status) VALUES (#{userId}, #{productId}, #{productCount}, 'added')")
	    void addProductToCart(@Param("userId") int userId, @Param("productId") int productId, @Param("productCount") int productCount);
	 
	 @Select("SELECT * FROM bookinglist WHERE user_id = #{userId} AND product_id = #{productId} AND status = 'added'")
	    List<BookingList> findProductInCart(@Param("userId") int userId, @Param("productId") int productId);
}
