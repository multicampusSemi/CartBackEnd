package com.project.mapper;

import java.util.List;

import org.apache.ibatis.annotations.Insert;
import org.apache.ibatis.annotations.Mapper;
import org.apache.ibatis.annotations.Param;
import org.apache.ibatis.annotations.Select;
import org.apache.ibatis.annotations.Update;

import com.project.model.Cart;

@Mapper
public interface LjmSemiMapper {
	 @Insert("INSERT INTO bookinglist (user_id, product_id, product_count, product_description, shipping_fee, product_price status) VALUES (#{userId}, #{productId}, #{productCount}, 'added')")
	    void addProductToCart(@Param("userId") int userId, @Param("productId") int productId, @Param("productCount") int productCount);
	 
	 @Select("SELECT * FROM bookinglist WHERE user_id = #{userId} AND product_id = #{productId} AND status = 'added'")
	    List<Cart> findProductInCart(@Param("userId") int userId, @Param("productId") int productId);
	 
	 @Update("UPDATE bookinglist SET product_count = #{productCount} WHERE user_id = #{userId} AND product_id = #{productId} AND status = 'added'")
	    void updateProductCount(@Param("userId") int userId, @Param("productId") int productId, @Param("productCount") int productCount);
}
