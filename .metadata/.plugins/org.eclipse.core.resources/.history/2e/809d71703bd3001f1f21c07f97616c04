<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mapper.LjmSemiMapper">

<select id="addcart" resultType="com.project.model.Cart">
 INSERT INTO bookinglist 
(user_id, product_id, product_count, product_description, shipping_fee, product_price, status)
VALUES
(?, ?, ?, ?, ?, ?, `added`);
 </select>
 
 <select id="findcart" resultType="com.project.model.Cart">
 SELECT * 
FROM bookinglist 
WHERE user_id = ? 
AND product_id = ? 
AND status = 'added';
 </select>
 
 <select id="updatecart" resultType="com.project.model.Cart">
 UPDATE bookinglist 
SET product_count = ? 
WHERE user_id = ? 
AND product_id = ? 
AND status = `added`;
 </select>
 
<select id="getAllProducts" resultType="com.project.mvc.model.Products">
        SELECT id, name, description, price, imageUrl, shippingFee
        FROM products
    </select>
 
</mapper> 
